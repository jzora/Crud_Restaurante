<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/4fe1ea1cf2.js" crossorigin="anonymous"></script>
    <style>
        body{
            background-color: cornsilk;
        }
        /* .container{
            margin-left: 0;
            margin-right: 0;
        } */
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-dark body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#" style="color: white;">Crud Restaurante</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/" style="color: white;">Home</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <div class="container">
        <a href="./create" class="btn btn-outline-primary mt-4 mb-4"><i class="fa-solid fa-plus"></i> <i class="fa-solid fa-bowl-rice bx-md"></i></a>
        <table  class="table table-dark table-striped-columns">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">Platillo</th>
                    <th scope="col">CÃ³digo del Platillo</th>
                    <th scope="col">Ingredientes</th>
                    <th scope="col">Platillos Activos</th>
                    <th scope="col">Acciones</th>
                </tr>  
            </thead>
            <tbody>
                <% results.forEach((platillo)=> { %>
                <tr>
                    <td> <%=platillo.name_Platillo%> </td>
                    <td> <%=platillo.cod_Platillo%> </td>
                    <td> <%=platillo.Ingredientes%> </td>
                    <td> <%=platillo.Platillos_Activos%> </td>
                    <td>
                        <a href="/edit/<%=platillo.cod_Platillo%>" class="btn btn-outline-primary mt-4"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/delete/<%=platillo.cod_Platillo%>" class="btn btn-outline-primary mt-4"><i class="fa-solid fa-trash-can"></i></a>       
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
  </body>
</html>